<!-- <p>
    In this example we are loading many items but only ~30 of them are rendered in the DOM.
    This allows to load as big data as you want.
</p> -->

<ng-select 
        [items]="buffer"
        [allItems]="items"
        [virtualScroll]="true"
        [loading]="loading"
        bindLabel="label"
        bindValue="value"
        (scroll)="onScroll($event)"
        (scrollToEnd)="onScrollToEnd()"
        autofocus
        [(ngModel)]="value"
        (ngModelChange)="onChangeItem($event)">
    <ng-template ng-header-tmp>
        <small class="form-text text-muted">Loaded {{buffer.length}} of {{items.length}}</small>
    </ng-template>
    <ng-template ng-option-tmp let-item="item" let-index="index">
        <b>{{index}} - {{item.value}}</b> {{item.label}}
    </ng-template>
</ng-select>
<!-- <br/>Selected: {{value}} -->
